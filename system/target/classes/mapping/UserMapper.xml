<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.peanutvideo.system.mapper.UserMapper">
  <resultMap id="UserResult" type="User">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="mark" jdbcType="INTEGER" property="mark" />
  </resultMap>

  <sql id="selectUserVo">
    select id, user_id, password, mark from user_pwd
  </sql>

  <select id="selectUser" parameterType="java.lang.Long" resultMap="UserResult">
    <include refid="selectUserVo" />
    where id = #{id}
  </select>

  <select id="selectUserList" parameterType="User" resultMap="UserResult">
    <include refid="selectUserVo"/>
    <where>
      <if test="id != null and id != ''">and id = #{id}</if>
      <if test="user_id != null and user_id != ''">and user_id = #{user_id}</if>
      <if test="password != null and password != ''">and password = #{password}</if>
      <if test="mark != null and mark != ''">and mark = #{mark}</if>
    </where>
  </select>

  <delete id="deleteUser" parameterType="java.lang.Long">
    delete from user_pwd
    where user_id = #{user_id}
  </delete>

  <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
    insert into user_pwd
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="user_id != null">user_id,</if>
      <if test="password != null">password,</if>
      <if test="mark != null">mark,</if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="user_id != null">#{user_id},</if>
      <if test="password != null">#{password},</if>
      <if test="mark != null">#{mark},</if>
    </trim>
  </insert>

  <update id="updateUser" parameterType="User">
    update user_pwd
    <set>
      <if test="password != null">
        password = #{password},
      </if>
      <if test="mark">
        mark = #{mark},
      </if>
    </set>
    where user_id = #{user_id}
  </update>
</mapper>
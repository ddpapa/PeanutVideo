<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.peanutvideo.system.mapper.UserMessageMapper">
  <resultMap id="UserMessageResult" type="UserMessage">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="nickname" jdbcType="VARCHAR" property="nickname" />
    <result column="avatar" jdbcType="VARCHAR" property="avatar" />
    <result column="gender" jdbcType="INTEGER" property="gender" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="telephone" jdbcType="CHAR" property="telephone" />
    <result column="method" jdbcType="INTEGER" property="method" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="mark" jdbcType="INTEGER" property="mark" />
  </resultMap>
  <sql id="UserMessageVo">
    select id, nickname, avatar, gender, birthday, telephone, method, description, mark from user_info
  </sql>
  <select id="selectUserMessage" parameterType="java.lang.Long" resultMap="UserMessageResult">
    <include refid="UserMessageVo" />
    where id = #{id}
  </select>

  <select id="selectUserMessageList" parameterType="UserMessage" resultMap="UserMessageResult">
    <include refid="UserMessageVo"/>
    <where>
      <if test="id != null and id != ''">and id = #{id}</if>
      <if test="nickname != null and nickname != ''">and nickname = #{nickname}</if>
      <if test="avatar != null and avatar != ''">and avatar = #{avatar}</if>
      <if test="gender != null and gender != ''">and gender = #{gender}</if>
      <if test="birthday != null and birthday != ''">and birthday = #{birthday}</if>
      <if test="telephone != null and telephone != ''">and telephone = #{telephone}</if>
      <if test="method != null and method != ''">and method = #{method}</if>
      <if test="description != null and description != ''">and description = #{description}</if>
      <if test="mark != null and mark != ''">and mark = #{mark}</if>
    </where>
  </select>

  <delete id="deleteUserMessage" parameterType="java.lang.Long">
    delete from user_info
    where id = #{id}
  </delete>

  <insert id="insertUserMessage" parameterType="UserMessage" useGeneratedKeys="true" keyProperty="id">
    insert into user_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="nickname != null">nickname,</if>
      <if test="avatar != null">avatar,</if>
      <if test="gender != null">gender,</if>
      <if test="birthday != null">birthday,</if>
      <if test="telephone != null">telephone,</if>
      <if test="method != null">method,</if>
      <if test="description != null">description,</if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="nickname != null">#{nickname},</if>
      <if test="avatar != null">#{avatar},</if>
      <if test="gender != null">#{gender},</if>
      <if test="birthday != null">#{birthday},</if>
      <if test="telephone != null">#{telephone},</if>
      <if test="method != null">#{method},</if>
      <if test="description != null">#{description},</if>
    </trim>
  </insert>

  <update id="updateUserMessage" parameterType="UserMessage">
    update user_info
    <set>
      <if test="nickname != null">#{nickname},</if>
      <if test="avatar != null">#{avatar},</if>
      <if test="gender != null">#{gender},</if>
      <if test="birthday != null">#{birthday},</if>
      <if test="telephone != null">#{telephone},</if>
      <if test="method != null">#{method},</if>
      <if test="description != null">#{description},</if>
      <if test="mark != null">#{mark},</if>
    </set>
    where id = #{id}
  </update>
</mapper>